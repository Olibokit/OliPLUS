# ğŸ Base image Python optimisÃ©e
FROM python:3.11-slim AS base

# ğŸ“Œ Variables d'environnement
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    POETRY_VERSION=1.8.3 \
    PATH="/root/.local/bin:$PATH"

# ğŸ“‚ RÃ©pertoire de travail
WORKDIR /app

# ğŸ› ï¸ DÃ©pendances systÃ¨me minimales
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential libpq-dev curl \
    && rm -rf /var/lib/apt/lists/*

# ğŸ“¦ Installation de Poetry
RUN pip install --no-cache-dir poetry==$POETRY_VERSION

# ğŸ“„ Copie des fichiers de dÃ©pendances (depuis la racine)
COPY pyproject.toml poetry.lock ./

# ğŸ“¥ Installation des dÃ©pendances sans les dev
RUN poetry install --no-root --only main --no-interaction --no-ansi

# ğŸ“‚ Copie du code source (uniquement le backend)
COPY backend/ .

# â–¶ï¸ Commande par dÃ©faut : Celery worker
CMD ["poetry", "run", "celery", "-A", "cockpit_core.tasks", "worker", "--loglevel=INFO"]
